@using BlazorApp.Models
@page "/EditCustomer/{customerId}"
@using BlazorApp.Services
@inject ICustomerService CustomService
@inject NavigationManager NavigationManager


<h1>Edit Customer</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="ContactName" class="control-label">Name</label>
                <input for="ContactName" class="form-control" @bind="@customer.ContactName"  />
            </div>
            <div class="form-group">
                <label for="Address" class="control-label">Address</label>
                <input for="Address" class="form-control" @bind="@customer.Address"  />
            </div>
            <div class="form-group">
                <label for="Country" class="control-label">Country</label>
                <input for="Country" class="form-control" @bind-value="@customer.Country"  />
            </div>
            <div class="form-group">
                <label for="Phone" class="control-label">Phone</label>
                <input for="Phone" class="form-control" @bind-value="@customer.Phone" />
            </div>
            <div class="form-group">
                <label for="PostalCode" class="control-label">Postal Code</label>
                <input for="PostalCode" class="form-control" @bind-value="@customer.PostalCode" />
            </div>
            <div class="form-group">
                <label for="Region" class="control-label">Region</label>
                <input for="Region" class="form-control" @bind-value="@customer.Region"  />
            </div>

            <div class="form-group">
                <label asp-for="CompanyName" class="control-label">Company</label>
                <input asp-for="CompanyName" class="form-control" @bind-value="@customer.CompanyName"  />
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">City</label>
                <input asp-for="City" class="form-control" @bind-value="@customer.City"  />
            </div>
            <div class="form-group">
                <input type="button" value="Save" @onclick=@(async () => await UpdateCustomer()) class="btn btn-default" />
                <input type="button" value="Cancel" @onclick=cancel class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
@code {
    [Parameter]
    public string customerId { get; set; }

    Customer customer = new Customer();



    protected async override Task OnInitializedAsync()
    {
        customer =  await CustomService.Get(customerId);
    }

    protected async Task UpdateCustomer()
    {


        await CustomService.Update(customerId, customer);
        
        NavigationManager.NavigateTo("/CustomersTable",true);
        
    }
    void cancel()
    {
        NavigationManager.NavigateTo("/CustomersTable",true);
    }
}