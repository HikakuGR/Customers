@using BlazorApp.Models
@page "/CreateCustomer"
@using BlazorApp.Services
@inject CustomerService CustomerService
@inject NavigationManager NavigationManager

<h1>Create Customer</h1>
<div class="row">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="Name" class="control-label">Name</label>
                <input for="Name" class="form-control" @bind="@customer.ContactName" />
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Address</label>
                <input for="Name" class="form-control" @bind="@customer.Address" />
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Country</label>
                <input for="Name" class="form-control" @bind="@customer.Country" />
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Phone</label>
                <input for="Name" class="form-control" @bind="@customer.Phone" />
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Postal Code</label>
                <input for="Name" class="form-control" @bind="@customer.PostalCode" />
            </div>
            <div class="form-group">
                <label for="Name" class="control-label">Region</label>
                <input for="Name" class="form-control" @bind="@customer.Region" />
            </div>            
            <div class="form-group">
                <label asp-for="Department" class="control-label">Company</label>
                <input asp-for="Department" class="form-control" @bind="@customer.CompanyName" />
            </div>
            <div class="form-group">
                <label asp-for="City" class="control-label">City</label>
                <input asp-for="City" class="form-control" @bind="@customer.City" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default" @onclick=CreateEmployee>Save</button>
                <button class="btn" @onclick="cancel">Cancel</button>
            </div>
        </form>
    </div>
</div>
@code {
    Customer customer = new Customer();

    protected async Task CreateEmployee()
    {

        CustomerService.Create(customer);
        
        NavigationManager.NavigateTo("/CustomersTable", true);
    }
    void cancel()
    {
        NavigationManager.NavigateTo("/CustomersTable",true);
    }
}